<div class="chat-content">
  <div class="content-top">
    <div class="chat-username">
      <%= message.user.name %>
    </div>
    <div class="chat-day">
      <%= message.created_at %>
    </div>
  </div>
  <div class="content-bottom">
    <div class="chat-text">
      <%= message.content %>
    </div>
  </div>
</div>